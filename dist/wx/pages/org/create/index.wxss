@import "../../../common/vendor.wxss";

.org-create .bottom {
  position: fixed;
  bottom: 64rpx;
  width: 100vw;
  z-index: 2;
}
.org-create .cancel-button .van-button {
  box-shadow: 0 12rpx 20rpx 0 rgba(228, 235, 248, 0.31);
}
.org-create .next-button .van-button {
  box-shadow: 0 8rpx 16rpx 0 rgba(248, 110, 110, 0.25);
}
.org-create .type-desc {
  padding: 20rpx 32rpx;
  font-size: 24rpx;
  color: #333;
}
.org-type {
  position: relative;
}
.org-type .van-icon {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
}