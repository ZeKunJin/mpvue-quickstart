@import "../../common/vendor.wxss";

.area-text {
  line-height: 68rpx;
  font-size: 24rpx;
  margin: 0 16rpx;
  position: relative;
  width: 128rpx;
}
.arrow-icon {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translate(0, -50%);
}
.org .bottom {
  position: fixed;
  bottom: 64rpx;
  text-align: center;
  width: 100vw;
}
.org .bottom .van-button {
  box-shadow: 0 8rpx 16rpx 0 rgba(248, 110, 110, 0.25);
}
.edit-icon {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.org .container .van-button {
  border: 2rpx solid E61F1C;
}