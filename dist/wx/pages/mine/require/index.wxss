@import "../../../common/vendor.wxss";

.mine-require {
  background-color: #ffffff;
}
.mine-require .bottom {
  position: fixed;
  bottom: 64rpx;
  text-align: center;
  width: 100vw;
}
.mine-require .bottom .van-button {
  box-shadow: 0 8rpx 16rpx 0 rgba(248, 110, 110, 0.25);
}
.mine-require .container {
  width: 100vw;
  padding: 20rpx 32rpx;
  display: flex;
  border-bottom: 2rpx solid #ebedf0;
  position: relative;
}
.mine-require .container .title {
  font-size: 28rpx;
  color: #630a24;
  font-weight: 500;
}
.mine-require .container .scale {
  font-size: 24rpx;
  color: #F68725;
}
.mine-require .container .desc {
  position: absolute;
  bottom: 0;
}
.mine-require .container .date {
  font-size: 24rpx;
  color: #999999;
  width: 30vw;
}
.mine-require .container .edit {
  position: absolute;
  right: 96rpx;
  bottom: 20rpx;
}
.mine-require .container .edit-icon {
  position: absolute;
  right: 156rpx;
  top: 20rpx;
}
.mine-require .container .member-icon {
  position: absolute;
  right: 96rpx;
  top: 20rpx;
}
.mine-require .slider {
  margin-bottom: 48rpx;
  margin-top: 44rpx;
  text-align: center;
  width: 90%;
  margin-left: 5%;
}
.mine-require .slider .button {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.08);
  background-color: #ffffff;
  position: relative;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999999;
}
.mine-require .table-head {
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  background-color: #FAFAFA;
  padding: 30rpx 48rpx;
}
.mine-require .table-container {
  text-align: center;
  font-size: 24rpx;
  color: #333333;
  padding: 30rpx 48rpx;
}
.mine-require .img {
  width: 144rpx;
  height: 144rpx;
  background-size: 144rpx 144rpx;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  margin-right: 32rpx;
  border-radius: 20rpx;
}
.mine-require .img .cover-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffffff;
  font-size: 28rpx;
  width: 144rpx;
  text-align: center;
}