@import "../../../../common/vendor.wxss";

page {
  background-color: #ffffff;
}
.edit-require .bottom {
  position: fixed;
  bottom: 64rpx;
  width: 100vw;
  z-index: 1;
}
.edit-require .bottom .van-button {
  box-shadow: 0 8rpx 16rpx 0 rgba(248, 110, 110, 0.25);
}
.edit-require .cancel-button .van-button {
  box-shadow: 0 12rpx 20rpx 0 rgba(228, 235, 248, 0.31);
}
.edit-require .next-button .van-button {
  box-shadow: 0 8rpx 16rpx 0 rgba(248, 110, 110, 0.25);
}
.edit-require .desc-block {
  padding: 20rpx 32rpx;
  border: 2rpx solid #e1e1e1;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.edit-require .desc-block .clear-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}