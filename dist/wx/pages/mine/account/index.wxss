@import "../../../common/vendor.wxss";

.account .avatar {
  text-align: center;
  padding: 20rpx 0;
}
.account .name {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}
.account .dialog-container {
  padding: 0 32rpx;
  padding-top: 24rpx;
  padding-bottom: 48rpx;
  text-align: center;
  font-size: 28rpx;
  color: #646566;
}
.account .input {
  border-bottom: 2rpx solid #F3F3F5;
  padding: 10rpx 8rpx;
  text-align: left;
}
.account .input .code-text {
  position: absolute;
  color: #E61F1C;
  font-size: 28rpx;
  right: 8rpx;
  top: 10rpx;
  z-index: 2;
}
.placeholder {
  color: #C1C1C1;
}