@import "../../../common/vendor.wxss";

.map .background {
  width: 100vw;
  height: 100vh;
}
.map .search {
  width: 100vw;
}
.map .result {
  position: absolute;
  bottom: 0;
  background-color: #ffffff;
  width: 100vw;
  height: 512rpx;
  z-index: 1;
}
.map .area-text {
  line-height: 68rpx;
  font-size: 24rpx;
  margin: 0 16rpx;
  position: relative;
  width: 128rpx;
}
.map .arrow-icon {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translate(0, -50%);
}