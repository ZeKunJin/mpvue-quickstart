@import "../../../common/vendor.wxss";

.bottom_box {
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}
.bottom_box .load-more {
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}
.bottom_box .main_box {
  padding: 20rpx 32rpx;
}
.bottom_box .main_box .image_box {
  width: 144rpx;
  height: 144rpx;
}
.bottom_box .footer_box {
  border-top: 2rpx solid #f1f1f1;
  text-align: center;
  display: flex;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.bottom_box .footer_box .one_btn,
.bottom_box .footer_box .two_btn {
  width: 160rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
}
.bottom_box .footer_box .one_btn:after,
.bottom_box .footer_box .two_btn:after {
  border: none;
}
.bottom_box .footer_box .three_btn {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}
.bottom_box .example_box {
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  margin-top: 8rpx;
}
.bottom_box .produce_box {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.comment-box {
  padding: 20rpx 32rpx;
}
.comment-box .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}
.comment-box .repay-container {
  margin-top: 20rpx;
  margin-left: 70rpx;
}
.comment-box .repay-container .name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
.comment-box .repay-container .content {
  font-size: 28rpx;
  color: #494949;
  margin-top: 6rpx;
}
.comment-box .repay-container .content-img {
  width: 108rpx;
  height: 108rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}
.comment-box .comment-container {
  padding-top: 20rpx;
}
.comment-box .comment-container .name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
.comment-box .comment-container .content {
  font-size: 28rpx;
  color: #494949;
  margin-top: 6rpx;
}
.comment-box .comment-container .desc-block {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #999999;
}
.comment-box .comment-container .desc-block .like-container {
  float: right;
  display: flex;
  align-items: center;
}
.comment-box .comment-container .desc-block .like-text {
  margin-right: 8rpx;
  color: #E61F1C;
  font-size: 28rpx;
}
.comment-box .comment-container .content-img {
  width: 108rpx;
  height: 108rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}
.top_box {
  background: #fff;
  box-sizing: border-box;
  padding: 30rpx;
}
.top_box .address_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}
.top_box .address_box :nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
}
.top_box .address_box :nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}
.top_box .num_box {
  margin: 20rpx 0 0 0;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #f68725;
}
.top_box .num_box>._div {
  width: 300rpx;
}
.top_box .kind_box {
  font-size: 24rpx;
  line-height: 36rpx;
  font-weight: 400;
  color: #333;
  margin: 12rpx 0;
}
.top_box .title_box {
  font-size: 28rpx;
  font-weight: 500;
  color: #0a2463;
}
.comment-tools {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,0.08);
  background-color: #ffffff;
  position: fixed;
  right: 32rpx;
  bottom: 180rpx;
}
.comment-tools .van-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}