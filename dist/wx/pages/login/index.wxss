@import "../../common/vendor.wxss";

page {
  background-color: #ffffff;
}
.login-bg {
  width: 100vw;
  height: 240rpx;
}
.login .block {
  padding: 80rpx 64rpx;
}
.login .title .desc {
  color: #999999;
  font-size: 40rpx;
  font-weight: 500;
}
.login .title .name {
  font-size: 48rpx;
  font-weight: 500;
}
.login .input {
  border-bottom: 2rpx solid #F3F3F5;
  padding: 10rpx 8rpx;
}
.login .input .code-text {
  position: absolute;
  color: #E61F1C;
  font-size: 28rpx;
  right: 8rpx;
  top: 10rpx;
  z-index: 2;
}
.login .button {
  margin-top: 128rpx;
  text-align: center;
}
.login .register-text {
  text-align: center;
  font-size: 24rpx;
  margin-top: 40rpx;
  color: #666666;
}
.login .button .login .van-button {
  box-shadow: 0 8rpx 16rpx 0 rgba(248, 110, 110, 0.25);
}
.placeholder {
  color: #C1C1C1;
}